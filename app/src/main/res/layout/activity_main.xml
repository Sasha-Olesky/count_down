<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/grey">
    <LinearLayout
        android:id="@+id/layoutClock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/normal_margin_top"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        >

        <TextView android:id="@+id/curDate"
            android:singleLine="true"
            android:ellipsize="end"
            android:paddingLeft="@dimen/label_margin_big"
            android:paddingStart="@dimen/label_margin_big"
            android:paddingBottom="@dimen/label_margin_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/date_label_size"
            android:layout_gravity="center_horizontal"/>
        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="@dimen/normal_margin_top"
            android:orientation="vertical"
            app:layout_aspectRatio="100%">
            <erquar.com.countdown.views.clockWidget.ClockViewSurface
                android:id="@+id/clockView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </android.support.percent.PercentRelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/clock_white"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvResultDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutClock"
        android:layout_marginTop="@dimen/normal_margin_top"
        android:layout_centerHorizontal="true"
        android:textColor="@color/clock_white"
        android:textSize="@dimen/date_label_size"
        android:visibility="gone"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_below="@id/tvResultDate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="@dimen/normal_margin_top"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:scrollbars="vertical"/>
    <TextView
        android:id="@+id/tv_empty"
        android:layout_below="@id/tvResultDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/normal_margin_top"
        android:textSize="@dimen/date_label_size"
        android:textColor="@color/clock_white"
        android:text="@string/empty_text"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@color/bottom_color"
        android:alpha="0.3"
        android:visibility="gone">
        <Button
            android:id="@+id/btnProduce"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:text="Produce"/>
        <Button
            android:id="@+id/btnReset"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:text="Reset"/>
    </LinearLayout>
</RelativeLayout>
